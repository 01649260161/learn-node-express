extends ../layouts/common.pug
block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="POST", enctype='multipart/form-data')
        .form-group
            label(for="name") Name
            input#name(type="text", value=values?values.name:"", name="name", class="form-control")

        .form-group
            label(for="phone") Phone
            input#phone(type="text", value=values?values.phone:"", name="phone", class="form-control")
        .form-group
            label(for="avatar") Avatar
            input#avatar(type="file", value=values?values.avatar:"", name="avatar", class="form-control")
        button(class="btn btn-primary mt-3",type="submit") Create