extends ../layouts/common.pug
block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login", method="POST")
        input(type="hidden", name="_csrf", value= csrfToken)
        .form-group
            label(for="email") email
            input#email(type="email", value=values?values.email:"", name="email", class="form-control")

        .form-group
            label(for="password") password
            input#password(type="password", value=values?values.password:"", name="password", class="form-control")
        button(class="btn btn-primary mt-3",type="submit") Login